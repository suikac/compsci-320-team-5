{
  "name": "urefer-root",
  "version": "0.0.1",
  "description": "",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": {
    "packages": ["login", "backend", "db"],
    "nohoist": [
      "**/typeorm",
      "**/typeorm/**"
    ]
  },

  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
