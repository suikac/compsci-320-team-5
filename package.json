{
  "name": "urefer-root",
  "version": "0.0.1",
  "description": "",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": {
    "packages": [
      "login",
      "backend",
      "db",
      "frontend"
    ],
    "nohoist": [
      "**/typeorm",
      "**/typeorm/**"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "devDependencies": {
    "prettier": "2.4.1"
  },
  "dependencies": {
    "react-hook-form": "^7.17.4",
    "react-popup-alert": "^2.0.0"
  }
}
